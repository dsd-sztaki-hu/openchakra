{
  "name": "@beepsoft/ocho",
  "version": "0.1.1",
  "module": "lib/index.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@bugsnag/js": "^6.5.2",
    "@bugsnag/plugin-react": "^6.5.0",
    "@chakra-ui/icons": "^1.0.10",
    "@chakra-ui/react": "^1.5.1",
    "@chakra-ui/theme": "^1.8.2",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "@mdx-js/react": "^1.5.5",
    "@reach/combobox": "^0.7.3",
    "@rehooks/local-storage": "^2.1.1",
    "@rematch/core": "^1.3.0",
    "browser-nativefs": "^0.7.1",
    "codesandbox": "^2.1.11",
    "coloreact": "^0.3.1",
    "copy-to-clipboard": "^3.2.1",
    "framer-motion": "^3.3.0",
    "import-sort-style-module": "^6.0.0",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "lz-string": "^1.4.4",
    "next": "^9.5.1",
    "next-redux-wrapper": "^6.0.2",
    "prism-react-renderer": "^1.0.2",
    "react": "^16.12.0",
    "react-color": "^2.18.0",
    "react-color-picker": "^4.0.2",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dom": "^16.12.0",
    "react-hotkeys-hook": "^2.4.0",
    "react-icons": "^3.9.0",
    "react-redux": "^7.1.3",
    "react-scripts": "3.3.0",
    "react-split-pane": "^0.1.89",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-undo": "^1.0.0",
    "typescript": "^4.5.5",
    "webpack-bundle-analyzer": "^3.6.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "rm -rf lib; time yarn build:esbuild && time yarn build:tsc && time yarn build:tscpaths",
    "build:esbuild": "echo 'Running esbuild' && node esbuild.config.js",
    "build:tsc": "echo 'Generating typescript types' && tsc --project tsconfig.build.json && yarn build:tscpaths",
    "build:tscpaths": "echo 'Fixing ~ import prefixes' && tscpaths -p tsconfig.build.json -s ./src -o ./lib",
    "build:tsup": "NOT USED tsup src --format cjs,esm --dts --clean",
    "npmPublish": "cd lib/esm && yarn publish --access public",
    "publish": "cd lib/esm && yarn publish --access public",
    "build:next": "next build",
    "start": "next start",
    "test": "jest",
    "analyze": "BUNDLE_VISUALIZE=1 react-app-rewired build",
    "prettier": "prettier --write src/**"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^9.5.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^8.1.0",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/lz-string": "^1.3.33",
    "@types/prettier": "^2.4.3",
    "@types/react-color": "^3.0.1",
    "@types/react-redux": "^7.1.7",
    "babel-jest": "^26.2.2",
    "esbuild": "^0.14.21",
    "esbuild-node-externals": "^1.4.1",
    "glob": "^7.2.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "next-compose-plugins": "^2.2.0",
    "next-transpile-modules": "^4.0.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^2.0.2",
    "ts-jest": "^26.1.4",
    "tscpaths": "^0.0.9",
    "tsup": "^5.11.11",
    "typedoc": "^0.16.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "eslint src/**/*.{ts,tsx} --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(svg|jpg|png|css)$": "<rootDir>/empty-module.js",
      "~(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(js)$": "babel-jest",
      "^.+\\.ts(x)?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s(x)?",
      "!**/node_modules/**"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  }
}
